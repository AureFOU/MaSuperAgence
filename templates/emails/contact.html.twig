<div class="container mt-4">
    <table align="center" border="0" cellpadding="0" cellspacing="0" role="presentation">
        <tbody>
        <tr>
            <td align="left">
                <table cellspacing="0" cellpadding="0" width="100%" border="0">
                    <tr>
                        <td>Nom du bien</td>
                        <td><a href="{{ url('property.show', {id:contact.property.id, slug: contact.property.slug}) }}">{{ contact.property.title }}</a> {{ contact.phone }}</td>
                    </tr>
                    <tr>
                        <td>Prénom</td>
                        <td>{{ contact.firstname }}</td>
                    </tr>
                    <tr>
                        <td>Nom</td>
                        <td>{{ contact.lastname }}</td>
                    </tr>
                    <tr>
                        <td>Téléphone</td>
                        <td>{{ contact.phone }}</td>
                    </tr>
                    <tr>
                        <td>Email</td>
                        <td>{{ contact.email }}</td>
                    </tr>
                    <tr>
                        <td>Message</td>
                        <td>{{ contact.message | nl2br }}</td>
                    </tr>
                </table>
            </td>
        </tr>
        </tbody>
    </table>
</div>